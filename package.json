{
  "name": "tethered",
  "version": "1.0.0",
  "private": true,
  "description": "Tethered - College Student + Parent Connection App",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "mobile": "npm run start --workspace=packages/mobile",
    "web": "npm run dev --workspace=packages/web",
    "shared:build": "npm run build --workspace=packages/shared",
    "install:all": "npm install",
    "clean": "rm -rf node_modules packages/*/node_modules",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^9.36.0",
    "typescript": "~5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
